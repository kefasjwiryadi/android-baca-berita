<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_nav"
    app:startDestination="@id/search_dest"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/search_dest"
        android:name="com.kefasjwiryadi.bacaberita.ui.search.SearchFragment">
        <action
            android:id="@+id/action_search_dest_to_article_detail_dest"
            app:destination="@id/article_detail_dest"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/article_detail_dest"
        android:name="com.kefasjwiryadi.bacaberita.ui.common.ArticleDetailFragment">
        <argument
            android:name="article"
            app:argType="com.kefasjwiryadi.bacaberita.domain.Article" />
    </fragment>
</navigation>